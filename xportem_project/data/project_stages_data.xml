<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Default Project Stages for Procurement -->
        <record id="project_stage_request_received" model="project.task.type">
            <field name="name">Solicitud Recibida</field>
            <field name="sequence">10</field>
            <field name="fold">False</field>
        </record>
        
        <record id="project_stage_supplier_search" model="project.task.type">
            <field name="name">Búsqueda de Proveedores</field>
            <field name="sequence">20</field>
            <field name="fold">False</field>
        </record>
        
        <record id="project_stage_quoting" model="project.task.type">
            <field name="name">Cotizando</field>
            <field name="sequence">30</field>
            <field name="fold">False</field>
        </record>
        
        <record id="project_stage_evaluation" model="project.task.type">
            <field name="name">Evaluación</field>
            <field name="sequence">40</field>
            <field name="fold">False</field>
        </record>
        
        <record id="project_stage_client_approval" model="project.task.type">
            <field name="name">Aprobación Cliente</field>
            <field name="sequence">50</field>
            <field name="fold">False</field>
        </record>
        
        <record id="project_stage_purchasing" model="project.task.type">
            <field name="name">En Compra</field>
            <field name="sequence">60</field>
            <field name="fold">False</field>
        </record>
        
        <record id="project_stage_in_transit" model="project.task.type">
            <field name="name">En Tránsito</field>
            <field name="sequence">70</field>
            <field name="fold">False</field>
        </record>
        
        <record id="project_stage_delivered" model="project.task.type">
            <field name="name">Entregado</field>
            <field name="sequence">80</field>
            <field name="fold">True</field>
        </record>
        
        <record id="project_stage_cancelled" model="project.task.type">
            <field name="name">Cancelado</field>
            <field name="sequence">90</field>
            <field name="fold">True</field>
        </record>
        
    </data>
</odoo>